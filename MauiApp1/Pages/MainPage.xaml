<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extension="clr-namespace:MauiApp1.Extension"
             xmlns:strings="clr-namespace:MauiApp1.Resources.Strings"
             xmlns:customControls="clr-namespace:MauiApp1.Pages"
             x:Class="MauiApp1.Pages.MainPage">

    <Grid RowDefinitions="100, *, 150"
        ColumnDefinitions="*, Auto">

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalTextAlignment="Center"
            Margin="40"
            Text="Danged!"
            TextColor="Red"
            FontFamily="RegularFont"
            IsVisible="True"/>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="40,0,20,0"
            Stroke="Gray">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>
            <ScrollView>
                <Editor
                    Text=""
                    IsReadOnly="True"
                    x:Name="TextLabelTest"
                    FontFamily="RegularFont"
                    FontSize="20"/>
            </ScrollView>
        </Border>


        <Editor
            TextChanged="TextEntryTest_TextChanged"
            Text=""
            Margin="40"
            Grid.Row="2"
            Grid.Column="0"
            x:Name="TextEntryTest"
            Keyboard="Text"
            FontSize="20"
            FontFamily="RegularFont"
            IsSpellCheckEnabled="True"
            IsTextPredictionEnabled="True"
            Placeholder="{Binding LocalizationResourceManager[EnterTheText], Mode=OneWay}"/>

        <customControls:ButtonControl 
            x:Name="btnPicture"
            Text="{Binding LocalizationResourceManager[SendPicture], Mode=OneWay}"
            Grid.Row="2"
            Grid.Column="2"
            Margin="40"
            CornerRadius="26"
            BackgroundColor="#151515"
            Tapped="btnPicture_Tapped"
            IsVisible="True"/>

        <customControls:ButtonControl 
            x:Name="btnText"
            Text="{Binding LocalizationResourceManager[SendText], Mode=OneWay}"
            Grid.Row="2"
            Grid.Column="2"
            CornerRadius="26"
            Margin="40"
            BackgroundColor="#151515"
            Tapped="btnText_Tapped"
            IsVisible="False"/>
        
    </Grid>

</ContentPage>
