<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.LanguagePage">

    <Grid RowDefinitions="50, *, *, *, Auto"
        ColumnDefinitions="*, Auto"
        Margin="20,0,20,0">

        <Label
            Grid.Row="0"
            Grid.ColumnSpan="2"
            FontSize="Title"
            TextColor="Aqua"
            FontFamily="RegularFont"
            Text="{Binding LocalizationResourceManager[Language], Mode=OneWay}"/>

        
         <RadioButton
             IsChecked="True"
             x:Name="RussianRb"
             Grid.Row="1"
             Grid.ColumnSpan="2"
             Content="Русский" 
             Value="ru-RU"
             CheckedChanged="OnLanguageCheckedChanged" />

        <RadioButton
            x:Name="EnglishRb"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Content="English"
            Value="en-US"
            CheckedChanged="OnLanguageCheckedChanged" />
    </Grid>
</ContentPage>