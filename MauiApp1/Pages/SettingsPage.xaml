<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.SettingsPage">

    <Grid RowDefinitions="50, *, 10, *, 10, *, 50, 50, *, 10, *, Auto"
        ColumnDefinitions="*, Auto"
        Margin="-10,0,-10,0">

        <Label
            Grid.Row="0"
            Grid.ColumnSpan="2"
            FontSize="Title"
            TextColor="Blue"
            FontFamily="RegularFont"
            Text="{Binding LocalizationResourceManager[Settings], Mode=OneWay}"
            Padding="20,10,0,0"/>
        <Label
            Grid.Row="1"
            Grid.ColumnSpan="2"
            FontSize="20"
            Text="{Binding LocalizationResourceManager[ChatSettings], Mode=OneWay}"
            FontFamily="RegularFont"
            Padding="40,50,20,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="themeLb_Tapped" />
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="2" Grid.ColumnSpan="2" HeightRequest="2" Color="Black" Margin="40,0,0,0" />

        <BoxView Grid.Row="4" Grid.ColumnSpan="2" HeightRequest="2" Color="Black" Margin="40,0,0,0" />
        <Label              
            Grid.Row="3"
            Grid.ColumnSpan="2"
            FontSize="20"
            Text="{Binding LocalizationResourceManager[Network], Mode=OneWay}"
            FontFamily="RegularFont"
            Padding="40,50,20,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="networkLb_Tapped"/>
            </Label.GestureRecognizers>
        </Label>
        
        <Label
            Grid.Row="5"
            Grid.Column="0"
            FontSize="20"
            Text="{Binding LocalizationResourceManager[Language], Mode=OneWay}"
            FontFamily="RegularFont"
            Padding="40,50,20,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="languageLb_Tapped" />
            </Label.GestureRecognizers>
        </Label>
        <Label
            x:Name="LanguageLb"
            TextColor="Aqua"
            Grid.Row="5"
            Grid.Column="1"
            FontSize="20"
            Text=""
            FontFamily="RegularFont"
            Padding="40,50,20,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="languageLb_Tapped" />
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="6" Grid.ColumnSpan="2" HeightRequest="10" Color="Black" Margin="0,0,0,0" />


        
        <Label
            Grid.Row="7"
            Grid.ColumnSpan="2"
            FontSize="Title"
            FontFamily="RegularFont"
            TextColor="Blue"
            Text="{Binding LocalizationResourceManager[Help], Mode=OneWay}"
            Padding="20,10,0,0"/>
        
        
        <Label
            Grid.Row="8"
            Grid.ColumnSpan="2"
            FontSize="20"
            Text="GitHub"
            FontFamily="RegularFont"
            Padding="40,50,20,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="ghLb_Tapped" />
            </Label.GestureRecognizers>
        </Label>
        <BoxView Grid.Row="9" Grid.ColumnSpan="2" HeightRequest="2" Color="Black" Margin="40,0,0,0" />
        
        <Label
            Grid.Row="10"
            Grid.ColumnSpan="2"
            FontSize="20"
            Text="{Binding LocalizationResourceManager[Mail], Mode=OneWay}"
            FontFamily="RegularFont"
            Padding="40,50,20,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="mailLb_Tapped" />
            </Label.GestureRecognizers>
        </Label>

        <Label
            x:Name="AppVersionLB"
            Grid.Row="11"
            Grid.ColumnSpan="2"
            Text=""
            FontFamily="BoldFont"
            HeightRequest="50"
            Background="Black"
            TextColor="Gray"
            VerticalOptions="Fill" 
            HorizontalOptions="Fill" 
            Padding="40,20,0,0">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="secret_Tapped" />
            </Label.GestureRecognizers>
        </Label>
    </Grid>

</ContentPage>