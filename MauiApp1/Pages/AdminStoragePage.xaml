<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.AdminStoragePage"
             xmlns:extension="clr-namespace:MauiApp1.Extension"
             xmlns:strings="clr-namespace:MauiApp1.Resources.Strings"
             BackgroundColor="Black">

    <Grid RowDefinitions="50, Auto, *, 50, 50, 50, 76"
      ColumnDefinitions="*, 50"
      Margin="20,40,20,0">

        <Label
            Grid.Row = "0"
            Grid.ColumnSpan="2"
            FontSize="Title"
            TextColor="#F30A49"
            FontFamily="RegularFont"
            Margin="0,-20"
            Text="{Binding LocalizationResourceManager[Administration], Mode=OneWay}"/>
    </Grid>
</ContentPage>