<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.AdminStoragePage"
             xmlns:extension="clr-namespace:MauiApp1.Extension"
             xmlns:customControls="clr-namespace:MauiApp1.Pages"
             xmlns:strings="clr-namespace:MauiApp1.Resources.Strings"
             xmlns:local="clr-namespace:MauiApp1.Pages"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">

    <StackLayout Padding="7">
        <Label x:Name="tappedItemHeader" FontSize="18"/>
        <ListView x:Name="usersListView" ItemsSource="{Binding users}" ItemTapped="UsersListView_ItemTapped" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="16" />
                                <Label Text="{Binding Age}" FontSize="14" />
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>