<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutWidth="270">


    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}">
            <Image Source="moon.png" />
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="MainPage" Icon="moon.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Profile" Icon="dotnet_bot.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:ProfilePage}"/>
    </FlyoutItem>

    <FlyoutItem Title="MLModel" Icon="dotnet_bot.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:MLModelPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="dotnet_bot.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:SettingsPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Administration" Icon="dotnet_bot.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:HelpPage}"/>
    </FlyoutItem>
</Shell>
